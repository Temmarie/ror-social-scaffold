<section class="user-section">
  <h2><%= "Name: #{@user.name}" %></h2>
  <article class="timeline">
      <% if current_user.friend?(@user) %>
        <h3>Recent posts:</h3>
        <ul class="posts">
          <%= render @posts %>
        </ul>
        <%else%>
        <h3>You need add friend to view their posts</h3>
      <%end%>

  </article>
</section>
